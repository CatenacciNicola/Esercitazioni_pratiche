@model Esercitazione_18.Models.Ingredient

@{
    ViewData["Title"] = "Aggiungi Ingrediente";
}

<h2>Aggiungi Ingrediente</h2>

<form asp-action="AggiungiIngrediente" method="post">
    <div class="form-group">
        <label asp-for="IngredientName" class="control-label"></label>
        <input asp-for="IngredientName" class="form-control" />
        <span asp-validation-for="IngredientName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Aggiungi" class="btn btn-primary" />
    </div>
</form>
