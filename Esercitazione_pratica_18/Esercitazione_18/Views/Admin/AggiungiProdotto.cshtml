@model Esercitazione_18.Models.Product

@{
    ViewData["Title"] = "Aggiungi Prodotto";
}

<h2>Aggiungi Prodotto</h2>

<form asp-action="AggiungiProdotto" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryMinutes" class="control-label"></label>
        <input asp-for="DeliveryMinutes" class="form-control" />
        <span asp-validation-for="DeliveryMinutes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="file" class="control-label">Product Image</label>
        <input type="file" class="form-control" id="file" name="file" />
    </div>
    <div class="form-group">
        <label>Ingredients</label>
        @foreach (var ingredient in ViewBag.Ingredients)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@ingredient.IngredientId" name="ingredientIds" />
                <label class="form-check-label">@ingredient.IngredientName</label>
            </div>
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Aggiungi" class="btn btn-primary" />
    </div>
</form>
