@model Esercitazione_14.Models.Prodotto

@{
    ViewData["Title"] = "Crea Nuovo Prodotto";
}

<h1 class="text-success">Crea Nuovo Prodotto</h1>

<form asp-action="Crea" method="post">
    <div class="form-group mt-2">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Prezzo" class="control-label"></label>
        <input asp-for="Prezzo" class="form-control" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Descrizione" class="control-label"></label>
        <textarea asp-for="Descrizione" class="form-control"></textarea>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="ImmagineCopertina" class="control-label"></label>
        <input asp-for="ImmagineCopertina" class="form-control" />
        <span asp-validation-for="ImmagineCopertina" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="ImmagineAggiuntiva1" class="control-label"></label>
        <input asp-for="ImmagineAggiuntiva1" class="form-control" />
        <span asp-validation-for="ImmagineAggiuntiva1" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="ImmagineAggiuntiva2" class="control-label"></label>
        <input asp-for="ImmagineAggiuntiva2" class="form-control" />
        <span asp-validation-for="ImmagineAggiuntiva2" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Crea" class="btn btn-success my-3" />
    </div>
</form>

<div>
    <a class="mt-5" asp-action="Index">Torna all'Elenco</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
