@model IEnumerable<ContravvenzioniWebApp.Models.Verbale>

<h1>Verbali con decurtamento punti superiore a 10</h1>
<table class="table">
    <thead>
        <tr>
            <th>Importo</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Data Violazione</th>
            <th>Decurtamento Punti</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Importo</td>
                
                <td>@item.DataViolazione</td>
                <td>@item.DecurtamentoPunti</td>
            </tr>
        }
    </tbody>
</table>
